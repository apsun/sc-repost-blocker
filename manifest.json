{
  "manifest_version": 3,
  "name": "SoundCloud repost blocker",
  "description": "Removes reposted tracks in your SoundCloud stream",
  "browser_specific_settings": {
    "gecko": {
      "id": "screpostblocker@crossbowffs.com"
    }
  },
  "version": "2.3",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.soundcloud.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.soundcloud.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}
